<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pht.cust.dao.EmployeeDao">

    <resultMap id="BaseResultMap" type="com.pht.cust.entity.Employee">
        <!--@Table employee-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="userCode" column="user_code" jdbcType="VARCHAR"/>
        <result property="cardNum" column="card_num" jdbcType="VARBINARY"/>
        <result property="custName" column="cust_name" jdbcType="VARCHAR"/>
        <result property="custType" column="cust_type" jdbcType="VARCHAR"/>
        <result property="idType" column="id_type" jdbcType="VARCHAR"/>
        <result property="idNum" column="id_num" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryByCode" resultType="com.pht.cust.entity.Employee">
        select *
        from market.employee
        where code = #{code}
    </select>



    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultType="com.pht.cust.entity.Employee">
        select *
        from market.employee
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userCode != null and userCode != ''">
                and user_code = #{userCode}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="cardNum != null and cardNum != ''">
                and card_num = #{cardNum}
            </if>
            <if test="custName != null and custName != ''">
                and cust_name = #{custName}
            </if>
            <if test="custType != null and custType != ''">
                and cust_type = #{custType}
            </if>
            <if test="idType != null and idType != ''">
                and id_type = #{idType}
            </if>
            <if test="idNum != null and idNum != ''">
                and id_num = #{idNum}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" >
        insert into market.employee(user_code, code,card_num, cust_name, cust_type, id_type, id_num,phone, update_time, create_time)
        values (#{userCode}, #{code}, #{cardNum},#{custName}, #{custType}, #{idType}, #{idNum},#{phone}, #{updateTime}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update market.employee
        <set>
                user_code = #{userCode},
                cust_name = #{custName},
                card_num=#{cardNum},
                cust_type = #{custType},
                id_type = #{idType},
                id_num = #{idNum},
                phone =#{phone},
                update_time = #{updateTime,jdbcType=TIMESTAMP}
        </set>
        where code = #{code}
    </update>

    <!--通过主键删除-->
    <delete id="deleteByCode">
        delete from market.employee where code = #{code}
    </delete>

</mapper>